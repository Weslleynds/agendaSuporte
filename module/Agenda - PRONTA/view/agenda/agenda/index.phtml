$title = 'Meus Contatos';
$this->headTitle($title);
?>
<h1><?php echo $this->escapeHtml($title); ?></h1>
<p>
    <a href="<?php echo $this->url('agenda', array('action'=>'add'));?>">Adicionar novo contato</a>
</p>

