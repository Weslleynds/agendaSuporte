    <td><?php echo $this->escapeHtml($agenda->getNome());?></td>
    <td><?php echo $this->escapeHtml($agenda->getEmpresa());?></td>
    <td>
        <a href="<?php echo $this->url('agenda',
            array('action'=>'edit', 'id' => $agenda->getId()));?>">Editar</a>
